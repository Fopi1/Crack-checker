generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id Int @id @default(autoincrement())

  name     String
  email    String @unique
  password String

  likes Game[]
  // refreshTokenId Int 
  // RefreshToken   RefreshToken[]
}

model Game {
  id String @id

  slug         String
  title        String
  isAAA        Boolean
  protections  String
  hackedGroups String
  releaseDate  String
  crackDate    String?
  shortImage   String

  likes User[]
  views Int    @default(0)

  categories Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  title String @unique
  icon  String
  games Game[]
}

